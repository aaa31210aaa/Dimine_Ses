<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="site_safety.ClassMeetingRecord">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_qian">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout style="@style/TitleHeight">

                <include
                    android:id="@+id/class_meeting_record_back"
                    layout="@layout/back_base"></include>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="班前会议记录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/Title2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:background="@color/gray_deep" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:background="@color/orange"
                    android:text="班级信息"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="班次" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:layout_weight="0.7"
                        android:background="@drawable/input_class"
                        android:hint="选择班次"
                        android:paddingLeft="10px"
                        android:textColorHint="@color/gray_deep" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="主持人" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:layout_weight="0.7"
                        android:background="@drawable/editext_yb"
                        android:hint="点击选择主持人"
                        android:paddingLeft="10px"
                        android:textColorHint="@color/gray_deep" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="与会人员" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:layout_weight="0.7"
                        android:background="@drawable/editext_yb"
                        android:hint="点击选择与会人员"
                        android:paddingLeft="10px"
                        android:textColorHint="@color/gray_deep" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="参与领导" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:layout_weight="0.7"
                        android:background="@drawable/editext_yb"
                        android:hint="点击选择参与领导"
                        android:paddingLeft="10px"
                        android:textColorHint="@color/gray_deep" />
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:background="@color/gray_deep" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:background="@color/yellow_orange"
                    android:text="时        间"
                    android:textColor="@color/white" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="开始时间" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10px"
                    android:layout_weight="0.7"
                    android:background="@drawable/editext_yb"
                    android:hint="选择事故种类"
                    android:paddingLeft="10px"
                    android:textColorHint="@color/gray_deep" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="结束时间" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10px"
                    android:layout_weight="0.7"
                    android:background="@drawable/editext_yb"
                    android:hint="选择事故种类"
                    android:paddingLeft="10px"
                    android:textColorHint="@color/gray_deep" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:background="@color/gray_deep" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:background="@color/blue_deep"
                    android:text="记录填写"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="10px"
                android:text="事故简要经过" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="@drawable/editext_yb"
                android:gravity="top"
                android:hint="请输入相应记录..."
                android:inputType="textMultiLine"
                android:padding="10px"
                android:textColorHint="@color/gray_deep" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="10px"
                android:text="现场处理情况" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="@drawable/editext_yb"
                android:gravity="top"
                android:hint="请输入相应记录..."
                android:inputType="textMultiLine"
                android:padding="10px"
                android:textColorHint="@color/gray_deep" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="10px"
                android:text="其他情况汇报" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="@drawable/editext_yb"
                android:gravity="top"
                android:hint="请输入相应记录..."
                android:inputType="textMultiLine"
                android:padding="10px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="20px"
                android:text="拍   照" />

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="20px"
                android:background="@drawable/icon_addpic_unfocused" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50px"
                    android:text="本地选择" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍照" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/accident_letters_submit"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/blue_deep"
        android:text="提   交"
        android:textColor="@color/white" />
</LinearLayout>
