                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <cn.bingoogolapple.badgeview.BGABadgeTextView
                    android:id="@+id/map_information_yjyl"
                    style="@style/QyXxLj"
                    android:text="应急演练"
                    app:badge_dragable="false"
                    app:badge_padding = "3dp"
