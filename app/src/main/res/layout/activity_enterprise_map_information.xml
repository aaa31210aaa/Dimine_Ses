                        android:text="" />
                </LinearLayout>

                <LinearLayout style="@style/MatchWrap">

                    <TextView
                        style="@style/QyXxTv"
                        android:text="@string/CompetentDepartment" />

                    <TextView
                        android:id="@+id/map_information_competentdepartment"
                        style="@style/QyXxTv"
                        android:text="" />
                </LinearLayout>

                <LinearLayout style="@style/MatchWrap">

                    <TextView
                        style="@style/QyXxTv"
