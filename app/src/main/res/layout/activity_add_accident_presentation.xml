<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ql"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="accident.AddAccidentPresentation">

    <RelativeLayout
        style="@style/TitleHeight"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <include
            android:id="@+id/add_accident_presentation_back"
            layout="@layout/back_base"></include>

        <TextView
            style="@style/MmTitleTextSize"
            android:text="@string/AddAccidentPresentationTitle" />


        <ImageView
            android:id="@+id/add_accident_presentation_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/maging_right"
            android:background="@drawable/msubmit" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7px"
                android:layout_weight="0.3"
                android:background="@drawable/editext_yb"
                android:gravity="center"
                android:text="@string/deptname" />


            <EditText
                android:id="@+id/add_accident_presentation_deptname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7px"
                android:layout_weight="0.7"
                android:background="@drawable/editext_yb"
                android:gravity="center"
                android:hint="@string/hintdeptname"
                android:text=""
                android:textColorHint="@color/gray_deep"
                android:textSize="@dimen/mr_text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
