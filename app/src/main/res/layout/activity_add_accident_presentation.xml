                android:layout_margin="7px"
                android:layout_weight="0.3"
                android:background="@drawable/editext_yb"
                android:gravity="center"
                android:text="@string/aititle" />


            <EditText
                android:id="@+id/add_accident_presentation_aititle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7px"
                android:layout_weight="0.7"
                android:background="@drawable/editext_yb"
                android:gravity="center"
                android:hint="@string/hintaititle"
                android:textColorHint="@color/gray_deep"
                android:textSize="@dimen/mr_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7px"
                android:layout_weight="0.3"
                android:background="@drawable/editext_yb"
                android:gravity="center"
                android:text="@string/aldate" />


            <TextView
                android:id="@+id/add_accident_presentation_aldate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7px"
                android:layout_weight="0.7"
                android:background="@drawable/editext_yb"
                android:drawableRight="@drawable/mdate"
                android:gravity="center"
                android:text="2017-2-27"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
