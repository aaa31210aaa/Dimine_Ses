                android:layout_margin="7px"
                android:layout_weight="0.3"
                android:background="@drawable/editext_yb"
                android:gravity="center"
                android:text="@string/sznum" />

            <EditText
                android:id="@+id/add_accident_presentation_sznum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7px"
                android:layout_weight="0.7"
                android:background="@drawable/editext_yb"
                android:gravity="center"
                android:hint="@string/hintsznum"
                android:inputType="number"
                android:textColorHint="@color/gray_deep"
                android:textSize="@dimen/mr_text_size" />

        </LinearLayout>

