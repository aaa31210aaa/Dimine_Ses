<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="home_content.SecurityCheck">


    <RelativeLayout style="@style/TitleHeight">

        <include
            android:id="@+id/security_check_back"
            layout="@layout/back_base"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/security_check_title_name"
            android:textColor="@color/white"
            android:textSize="@dimen/Title2" />


    </RelativeLayout>


    <include layout="@layout/title_img"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_qian"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/safety_check_list_rl"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:background="@drawable/editext_yb">


            <ImageView
                android:id="@+id/safety_check_list_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:background="@drawable/sfcheck_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@id/safety_check_list_img"
                android:text="@string/safety_check_list" />

            <include layout="@layout/right_arrow"></include>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hidden_trouble_registration_rl"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:background="@drawable/editext_yb">


            <ImageView
                android:id="@+id/hidden_trouble_registration_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:background="@drawable/sfcheck_dangrec" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@id/hidden_trouble_registration_img"
                android:text="@string/hidden_trouble_registration" />

            <include layout="@layout/right_arrow"></include>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hidden_rectification_rl"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:background="@drawable/editext_yb">


            <ImageView
                android:id="@+id/hidden_rectification_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:background="@drawable/sfcheck_reform" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@id/hidden_rectification_img"
                android:text="@string/hidden_rectification" />

            <include layout="@layout/right_arrow"></include>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/review_and_acceptance_rl"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:background="@drawable/editext_yb">


            <ImageView
                android:id="@+id/review_and_acceptance_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:background="@drawable/sfcheck_vdanger" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@id/review_and_acceptance_img"
                android:text="@string/review_and_acceptance" />

            <include layout="@layout/right_arrow"></include>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

