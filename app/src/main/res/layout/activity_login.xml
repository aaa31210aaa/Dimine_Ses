<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutback"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.administrator.dimine_sis.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200px"
        android:text="@string/app_title"
        android:textColor="@color/white"
        android:textSize="@dimen/Title2"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_title2"
        android:textColor="@color/white"
        android:textSize="@dimen/Title3" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="500px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="50px">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_login_inner" />

        <EditText
            android:id="@+id/account_etv"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="40px"
            android:background="@drawable/editext_yb"
            android:drawableLeft="@drawable/login_account"
            android:drawablePadding="20px"
            android:hint="@string/login_account_hint"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:singleLine="true"
            android:text="" />

        <EditText
            android:id="@+id/password_etv"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/account_etv"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:background="@drawable/editext_yb"
            android:drawableLeft="@drawable/login_passwd"
            android:drawablePadding="20px"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:singleLine="true"
            android:text="" />

        <CheckBox
            android:id="@+id/remember_account_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/password_etv"
            android:layout_alignRight="@+id/password_etv"
            android:layout_below="@+id/password_etv"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"
            android:text="记住账号"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/auto_login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/remember_account_checkbox"
            android:layout_centerHorizontal="true"
            android:text="自动登陆"
            android:textColor="@color/white"
            android:visibility="gone"/>

    </RelativeLayout>

    <Button
        android:id="@+id/login_submit"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:background="@drawable/smssdk_btn"
        android:text="登陆" />


</LinearLayout>
